<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
    android:orientation="horizontal">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/tablet_list_fragment_container"
        android:name="net.emojiparty.android.jishotomo.ui.fragments.EntryListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:paddingTop="?attr/actionBarSize"
        tools:layout="@layout/fragment_entry_list"
        />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/tablet_definition_fragment_container"
        android:name="net.emojiparty.android.jishotomo.ui.fragments.DefinitionFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:paddingTop="?attr/actionBarSize"
        tools:layout="@layout/fragment_definition"
        />

  </LinearLayout>
</layout>
